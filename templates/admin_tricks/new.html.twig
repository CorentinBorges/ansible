{% extends 'base.html.twig' %}

{% block title %}Nouveau Trick{% endblock %}

{% block body %}
    <h2 class="text-center mt-5">Ajouter un trick</h2>
<div class="container justify-content-center mt-5">

    <div class="row row-cols-1 row-cols-md-12">

        <div class="col mb-4">
            <div class="card pt-4 pb-4">
                <div class="container">

                    {{ form_start(form) }}
                        {{ form_row(form.name) }}
                        {{ form_row(form.description) }}
                        {{ form_row(form.groupe) }}


                    <ul class="images" data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}"></ul>
                    <ul class="videos" data-prototype="{{ form_widget(form.videos.vars.prototype)|e('html_attr') }}"></ul>


                    <button type="submit" class="btn btn-primary">Enregistrer le trick</button>
                    {{ form_end(form) }}


                    {#{{ form_start(imageForm) }}
                        {{ form_widget(imageForm) }}

                    <button type="submit" class="btn btn-primary">Enregistrer le trick</button>
                    {{ form_end(imageForm) }}
                    <p class="mt-3 text-left">*  Champs obligatoires</p>#}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
 {{ parent() }}
    <script src="{{ asset('js/loadedFilesDisplayed.js') }}"></script>
    <script src="{{ asset('js/add-collection-widget.js') }}" ></script>
    <script src="{{ asset('js/checkbox-first-widget.js') }}"></script>
{% endblock %}