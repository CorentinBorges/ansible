{% extends 'base.html.twig' %}

{% block body %}
    <div class="card mb-5" >
        <ul class="list-group list-group-flush">
            {% set nbMessages = messages|length %}
            {% set i=0 %}

            {% for message in messages %}
                <li class="list-group-item">
                    <div class="media">
                        {% if message.user.avatarPath is defined %}
                            <img src="{{ asset('images/avatars/' ~ message.user.avatarPath) }}" class="mr-3 d-none d-sm-block col-sm-2" alt="...">
                        {% else %}
                            <img src="{{ asset('images/avatars/face.jpg') }}" class="mr-3 d-none d-sm-block col-sm-2" alt="...">
                        {% endif %}


                        <div class="media-body">
                            <h5 class="mt-0">{{ message.user.username }}</h5>
                            <h5 class="mt-0">Posté le: {{ message.createdAt|date('d/m/Y') }} </h5>
                            {{ message.content }}
                        </div>
                    </div>
                </li>
        </ul>
                </div>
                {% set i=i+1 %}
            {% endfor %}

            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
            {#                TODO: boutton loadmore+ afficher nombre limité de commentaires#}
        </ul>
    </div>
{% endblock %}