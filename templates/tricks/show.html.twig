{% extends 'base.html.twig' %}

{% block body %}
    <div class="container justify-content-center mt-5">

        <div class="row row-cols-1 row-cols-md-12">

            <div class="col mb-4">
                <div class="card card-show">


                    {% if trick.findFirst is not null %}
                        <img src="{{ asset('images/' ~ trick.findFirst) }}" class="card-img-top" alt="...">
                    {% else %}
                        <img src="{{ asset('images/trick1.jpg') }}" class="card-img-top" alt="...">
                    {% endif %}
                    <div class="card-body ">

                        <h3 class="card-title">{{ trick.name }}</h3>
                        <div class="row justify-content-start" >
                            {% if trick.images is not null %}
                                {% for image in trick.images %}
                                    <a  href="{{ asset('images/' ~ image.name) }}" target="_blank" class="col-12 col-sm-4 mt-5 ">
                                        <img class="col-12" src="{{ asset('images/' ~ image.name) }}" alt="snow">
                                    </a>
                                {% endfor %}
                            {% endif %}

                            {% for video in trick.videos %}
                                <iframe class="col-12 col-sm-4 mt-5" src="{{ video.link }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            {% endfor %}

                        </div>
{#todo: comments ordered by#}
                        <p class="card-text mt-5">{{ trick.description }}</p>
                        <ul class="row description-list justify-content-center mt-5">
                            <li><span class="text-dark">Ajouté le:</span> {{ trick.createdAt|date('d/m/Y') }}</li>
                            {% if trick.modifiedAt is not null%}
                            <li><span class="text-dark">Modifié le:</span>  {{ trick.modifiedAt|date('d/m/Y')}} </li>
                            {% endif %}
                            <li><span class="text-dark">Category:</span>  {{ trick.groupe }}</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        {% if is_granted('ROLE_ADMIN') %}
            <div class="card text-center container mb-5" >
                {{ form_start(commentForm) }}
                    {{ form_widget(commentForm) }}
                <button type="submit" class="btn btn-primary text-center mb-4">Envoyer le commentaire</button>
                {{ form_end(commentForm) }}
            </div>
        {% endif %}

        <div class="card mb-5" >
            <ul class="list-group list-group-flush">
                {% set nbMessages = messages|length %}
                {% set i=1 %}
                {% set listId=1%}

                {% for message in messages %}
                    <li class="list-group-item list {{ "list" ~ listId }}">
                        <div class="media ">
                            {% if message.user.avatarPath is defined %}
                                <img src="{{ asset('images/avatars/' ~ message.user.avatarPath) }}" class="mr-3 d-none d-sm-block col-sm-2" alt="...">
                            {% else %}
                                <img src="{{ asset('images/avatars/face.jpg') }}" class="mr-3 d-none d-sm-block col-sm-2" alt="...">
                            {% endif %}


                            <div class="media-body">
                                <h5 class="mt-0">{{ message.user.username }}</h5>
                                <h5 class="mt-0">Posté le: {{ message.createdAt|date('d/m/Y') }} </h5>
                                {{ message.content }}
                            </div>
                        </div>
                    </li>
                    {% set i=i+1 %}
                    {% if i is divisible by(10) %}
                        {% set listId=listId+1 %}
                    {% endif %}
                {% endfor %}

                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item previous"><button class="page-link" >Previous</button></li>
                        <li class="page-item " ><button class="page-link page page1" value="1">1</button></li>
                        <li class="page-item " ><button class="page-link page page2" value="2" >2</button></li>
                        <li class="page-item "><button class="page-link page page3" value="3">3</button></li>
                        <li class="page-item next"><button class="page-link" href="#">Next</button></li>
                    </ul>
                </nav>
{#                TODO: boutton loadmore+ afficher nombre limité de commentaires#}
            </ul>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        {% set nbMessages = messages|length %}
        let nbMessages={{ nbMessages }};
        let nbPage=1
        for (i=1;i<=nbMessages;i++) {
            if (i % 10 === 0) {
                nbPage++
            }
        }
        let x=1;


        $(".list").hide();
        $(".list1").show();
        $(".page1").addClass("page-active")
        $(".page").click(function (){
            let page=$(this).val()
            $(".list"+(x)).hide();
            $('.list'+page).show();
            $(this).addClass("page-active");
            $(".page"+x).removeClass("page-active");
            x=Number(page);

        })

        $(".previous").click(function (){
            if (x>1) {
                let page=x-1;
                $(".list"+(x)).hide();
                $('.list'+page).show();
                x = page;
            }
        })
        $(".next").click(function (){
            if (x<nbPage) {

                let page=x+1;
                console.log(x+1);
                $(".list"+(x)).hide();
                $('.list'+page).show();
                x = page;
            }
        })



